{
  "name": "HomeWizard Instant Custom Component",
  "image": "ghcr.io/home-assistant/home-assistant:stable",
  "appPort": ["7123:8123"],
  "postStartCommand": "python -m homeassistant -c /config",
  "runArgs": ["-e", "GIT_EDITOR=code --wait", "--privileged"],
  "workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspaces/${localWorkspaceFolderBasename},type=bind,consistency=cached",
  "containerEnv": {
    "WORKSPACE_DIRECTORY": "/workspaces/${localWorkspaceFolderBasename}"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "terminal.integrated.profiles.linux": {
          "zsh": {
            "path": "/usr/bin/zsh"
          }
        },
        "terminal.integrated.defaultProfile.linux": "zsh",
        "editor.formatOnPaste": false,
        "editor.formatOnSave": true,
        "editor.formatOnType": true,
        "files.trimTrailingWhitespace": true
      }
    }
  },
  "mounts": [
    "type=bind,source=${localWorkspaceFolder}/custom_components,target=/config/custom_components,consistency=cached"
  ]
}